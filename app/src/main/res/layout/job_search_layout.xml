<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.dcastalia.android.job_portal.Activity.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ScrollView
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="53dp"
        android:orientation="vertical"
        android:padding="0dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relative1"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="#4D4D4D"

                android:orientation="horizontal">

                <EditText
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:gravity="fill_vertical"
                    android:padding="5dp"
                    android:hint="Search By"
                    android:textColorHint="#817e7e"
                    android:textColor="#f9f5f5"
                    android:background="#00000000"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_search"
                    android:layout_width="50dp"
                    android:layout_gravity="right"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/search"
                    android:layout_height="50dp"

                    />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="fill_parent"
                android:background="#333333"
                android:orientation="vertical">



                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#36353B"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp"
                    android:text="Location"
                    android:textColor="#c1bbbb"
                    android:textSize="16sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="15dp"
                android:background="#393742"
                android:layout_height="wrap_content">

                <Spinner
                    android:layout_width="match_parent"
                    android:background="#393742"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner_location"
                    android:layout_gravity="center_vertical" />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="fill_parent"
                android:background="#333333"
                android:orientation="vertical">



                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#36353B"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp"
                    android:text="Profession"
                    android:textColor="#c1bbbb"
                    android:textSize="16sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="15dp"
                android:background="#393742"
                android:layout_height="wrap_content">

                <Spinner
                    android:layout_width="match_parent"
                    android:background="#393742"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner2"
                    android:layout_gravity="center_vertical" />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="fill_parent"
                android:background="#333333"
                android:orientation="vertical">



                <TextView
                    android:id="@+id/job_requirements"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#36353B"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Job Requirement"
                    android:textColor="#c1bbbb"
                    android:textSize="16sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:background="#393742"
                android:orientation="horizontal"
                android:layout_weight="2"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">


                    <Spinner
                        android:layout_width="wrap_content"
                        android:background="#393742"
                        android:layout_marginTop="15dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner3"
                        android:layout_gravity="right" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">


                    <Spinner
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:background="#393742"
                        android:layout_marginTop="15dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner4"
                        android:layout_gravity="right" />

                </LinearLayout>




            </LinearLayout>


            <LinearLayout
                android:id="@+id/linear5"

                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="fill_parent"
                android:background="#333333"
                android:orientation="vertical">



                <TextView
                    android:id="@+id/salary_range"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#36353B"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp"
                    android:text="Salary  Range"
                    android:textColor="#c1bbbb"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <Spinner
                    android:id="@+id/spinner_salary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"

                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:background="#393742"
                    android:gravity="center"
                    android:prompt="@array/option"
                    android:spinnerMode="dropdown" />




            </LinearLayout>








        </LinearLayout>

</ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/line1"
        android:gravity="bottom">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_search_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0b0b0b"

            android:paddingLeft="24dp"
            android:paddingTop="12dp"
            android:text="Search Now"
            android:textAlignment="inherit"
            android:textAllCaps="false"
            android:textColor="#f2efef"
            android:textSize="22sp"/>

    </LinearLayout>


</RelativeLayout>






